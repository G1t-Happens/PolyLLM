# Add your own .env file in the root folder with your own database credentials following the schema below.
DB_URL=jdbc:<database_type>://<host>:<port>/<database_name>
DB_USER=<user>
DB_PASSWORD=<password>

# Environment variables for Large Language Model (LLM) providers' API configuration.
# Each provider requires two variables:
# - LLM_<PROVIDER>_API_URL: The base URL for the provider's API endpoint.
# - LLM_<PROVIDER>_API_KEY: The API key for authentication (must always be set).
LLM_OPENAI_API_URL=https://api.openai.com/v1
LLM_OPENAI_API_KEY=<your_openai_api_key>

LLM_GEMINI_API_URL=https://api.gemini.com/api
LLM_GEMINI_API_KEY=<your_gemini_api_key>

LLM_CLAUDE_API_URL=https://api.anthropic.com/v1
LLM_CLAUDE_API_KEY=<your_claude_api_key>

LLM_MISTRAL_API_URL=https://api.mistral.com/v1
LLM_MISTRAL_API_KEY=<your_mistral_api_key>

# Timeout values are specified in milliseconds.
# They must be within these ranges to prevent misconfiguration:
#   - Connection timeout (LLM_TIMEOUT_CONNECT): between 100 ms and 10,000 ms (10 seconds)
#   - Read timeout (LLM_TIMEOUT_READ): between 100 ms and 60,000 ms (60 seconds)
#
# Providing values outside these ranges will cause the application to fail validation during startup.
LLM_TIMEOUT_CONNECT=3000
LLM_TIMEOUT_READ=5000

